{
  "name": "targaryen",
  "version": "3.0.0-beta.1",
  "description": "Test Firebase security rules without connecting to Firebase.",
  "bin": {
    "targaryen": "bin/targaryen"
  },
  "main": "index.js",
  "directories": {
    "bin": "bin",
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin",
    "docs",
    "lib",
    "plugins",
    "index.js",
    "USAGE.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/goldibex/targaryen"
  },
  "scripts": {
    "coverage": "istanbul cover node_modules/.bin/_mocha -- --require test/setup.js --recursive -b test/spec/",
    "lint": "eslint lib/ test/ bin/targaryen",
    "test": "mocha -r test/setup.js test/spec/ --recursive  && jasmine && node ./bin/targaryen --verbose test/integration/rules.json test/integration/tests.json"
  },
  "author": "Harry Schmidt <me@goldibex.com>",
  "license": "ISC",
  "keywords": [
    "firebase",
    "testing",
    "jasmine",
    "mocha",
    "chai",
    "security",
    "rules"
  ],
  "dependencies": {
    "cli-table": "^0.3.1",
    "colors": "^1.0.3",
    "esprima": "^1.2.2",
    "lodash.mergewith": "^4.6.0",
    "minimist": "^1.1.0",
    "replaceall": "^0.1.3",
    "strip-json-comments": "^2.0.1"
  },
  "devDependencies": {
    "chai": "^1.10.0",
    "eslint": "^3.8.1",
    "eslint-plugin-node": "^2.1.3",
    "istanbul": "^0.4.5",
    "jasmine": "^2.1.1",
    "mocha": "^2.1.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0"
  }
}
